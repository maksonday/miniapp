{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "postgresql": {
      "type": "object",
      "properties": {
        "auth": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string",
              "minLength": 1,
              "description": "Name of the pre-created secret with PostgreSQL credentials."
            }
          },
          "required": ["existingSecret"]
        }
      },
      "required": ["auth"]
    },
    "redis": {
      "type": "object",
      "properties": {
        "auth": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string",
              "minLength": 1,
              "description": "Name of the pre-created secret with Redis password."
            },
            "existingSecretPasswordKey": {
              "type": "string",
              "minLength": 1,
              "description": "Key of the pre-created secret with Redis password."
            }
          },
          "required": ["existingSecret", "existingSecretPasswordKey"]
        }
      },
      "required": ["auth"]
    },
    "auth": {
      "type": "object",
      "properties": {
        "existingSecret": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the pre-created secret with RSA-cert"
        }
      },
      "required": ["existingSecret"]
    }
  }
}
